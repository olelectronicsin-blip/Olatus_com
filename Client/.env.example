# AI Provider selection
VITE_AI_PROVIDER=openai
VITE_AI_PROXY_URL=http://localhost:5000/api/ai/chat

# OpenAI-compatible settings
# Set your API key here (do not commit real keys)
VITE_OPENAI_API_KEY=YOUR_OPENAI_API_KEY
# Optional custom base URL (default: https://api.openai.com/v1)
VITE_OPENAI_URL=https://api.openai.com/v1
# Default model (overridable per call)
VITE_OPENAI_MODEL=gpt-5.1-codex-max

# Ollama settings (if using provider=ollama)
# For local: http://localhost:11434
# For cloud: e.g., https://api.ollama.ai
VITE_OLLAMA_URL=http://localhost:11434
VITE_OLLAMA_MODEL=llama3.1
# Optional API key for Ollama Cloud
VITE_OLLAMA_API_KEY=
